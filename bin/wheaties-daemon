#!/usr/bin/env ruby

require File.dirname(__FILE__) + "/../lib/wheaties/boot"
Wheaties.start

def start
  sleep 0.01
  EventMachine.run do
    Wheaties.connect
  end
end

if ARGV.include?("-q")
  start
else
  if fork
    exec "tail -n 0 -f #{Wheaties.root.join("log/wheaties.log")}"
  else
    start
  end
end
